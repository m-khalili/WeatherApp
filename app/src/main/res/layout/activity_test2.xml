<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refresh"
    android:background="#039BE5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp">

                <ImageButton
                    android:layout_width="24dp"
                    android:id="@+id/searchCity"
                    android:src="@drawable/ic_magnify_white_24dp"
                    android:layout_centerVertical="true"
                    android:background="#00FFFFFF"
                    android:layout_height="24dp"/>

                <com.mk.weather.CustomView.MyTextView
                    android:id="@+id/locationName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:textColor="#fff"
                    android:layout_centerInParent="true"
                    android:textSize="8sp"
                    app:textFont="semiBold"
                    tools:ignore="SmallSp" />

                <ImageButton
                    android:src="@drawable/round_more_vert_white_24dp"
                    android:layout_width="24dp"
                    android:layout_centerVertical="true"
                    android:background="#00FFFFFF"
                    android:layout_alignParentRight="true"
                    android:layout_height="24dp"/>
            </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="18dp"
    android:layout_height="262dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
     <com.airbnb.lottie.LottieAnimationView
         android:layout_width="200dp"
         android:layout_centerHorizontal="true"
         android:layout_height="200dp"
         app:lottie_autoPlay="true"
         app:lottie_loop="true"
         android:id="@+id/lottie"
         />
       <com.mk.weather.CustomView.MyTextView
           app:textSize="12sp"
           android:layout_centerHorizontal="true"
           android:layout_alignParentBottom="true"
           app:textColor="#fff"
           android:layout_marginBottom="26dp"
           android:id="@+id/temp"
           app:textFont="medium"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
    <com.mk.weather.CustomView.MyTextView
           app:textSize="10sp"
           android:layout_centerHorizontal="true"
           android:layout_alignParentBottom="true"
           app:textColor="#fff"
           android:layout_marginTop="24dp"
           android:id="@+id/description"
           app:textFont="light"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>

</RelativeLayout>


</LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler1"
                android:layout_marginTop="12dp"
                android:background="#1B000000"
                android:layout_width="match_parent"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                android:orientation="horizontal"
                android:layout_height="109dp"/>





            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerDaily"
                android:background="#1B000000"
                android:layout_marginTop="12dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="250dp"/>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">
                <TableRow>
                    <com.mk.weather.CustomView.MyTextView
                        app:textColor="#FFF"
                        android:id="@+id/sunrise"
                        android:layout_width="wrap_content"
                        app:textFont="semiBold"
                        android:layout_height="wrap_content"/>
                    <com.mk.weather.CustomView.MyTextView
                        android:id="@+id/sunset"
                        app:textColor="#FFF"
                        android:layout_width="wrap_content"
                        app:textFont="semiBold"
                        android:layout_marginLeft="28dp"
                        android:layout_height="wrap_content"/>
                    <com.mk.weather.CustomView.MyTextView
                        android:id="@+id/realFeel"
                        app:textColor="#FFF"
                        android:layout_width="wrap_content"
                        app:textFont="semiBold"
                        android:layout_marginLeft="28dp"
                        android:layout_height="wrap_content"/>
                    <com.mk.weather.CustomView.MyTextView
                        android:id="@+id/windSpeed"
                        android:layout_width="wrap_content"
                        app:textColor="#FFF"
                        app:textFont="semiBold"
                        android:layout_marginLeft="28dp"
                        android:layout_height="wrap_content"/>
                </TableRow>
                <TableRow>
                    <com.mk.weather.CustomView.MyTextView
                        app:text="Sunrise"
                        android:id="@+id/sunrise1"
                        android:layout_width="wrap_content"
                        app:textFont="medium"
                        android:layout_height="wrap_content"/>
                    <com.mk.weather.CustomView.MyTextView
                        app:text="Sunset"
                        android:id="@+id/sunset1"
                        android:layout_width="wrap_content"
                        app:textFont="medium"
                        android:layout_marginLeft="28dp"
                        android:layout_height="wrap_content"/>
                    <com.mk.weather.CustomView.MyTextView
                        android:id="@+id/realFeel1"
                        app:text="Real feel"
                        android:layout_width="wrap_content"
                        app:textFont="medium"
                        android:layout_marginLeft="28dp"
                        android:layout_height="wrap_content"/>
                    <com.mk.weather.CustomView.MyTextView
                        android:id="@+id/windSpeed1"
                        app:text="Wind Speed"
                        android:layout_width="wrap_content"
                        app:textFont="medium"
                        android:layout_marginLeft="28dp"
                        android:layout_height="wrap_content"/>
                </TableRow>
            </TableLayout>


        </LinearLayout>

    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>